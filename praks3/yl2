#!/bin/bash

# Skript kasutab muutujaid, et koostada terviklik lause

# M채채rasin muutujad
aasta="2016"
president="Kersti Kaljulaid"
lause_keskosa=". aastal valiti Eesti presidendiks "

# M채채rasin uue muutuja, mis koosneb teistest muutujatest, et koostada lause
lause="$aasta$lause_keskosa$president"

# Edastan lause muutuja tekstina
echo "$lause"
